//Ejercicio: Dentro de un rango

Let dentroRango = 5; // Cmabiamos el valor
Let valMin = 0, valMax = 10;
if( dentroRango >= valMin && dentroRango <= valMax){
    console.log("Esta dentro del rango")
}
else{
    console.log("Esta fuera del rango")
}


